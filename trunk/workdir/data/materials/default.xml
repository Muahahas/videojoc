<materials>
	
	<material name="Skybox001Material" vertex_type="PositionNormalUV" > 
		<!-- TODO: Cambiar vertex_type por technique en skybox para no tener que cambiar de pool-->
		<parameter type="color" name="diffuse_color" value="0.588 0.588 0.588 1.0 " />
		<texture type="diffuse" filename="data\textures\KGSkyBox.dds" />
		<parameter type="float" name="diffuse" value="100.0" />
	</material>

	<material name="NoiseVignettingMaterial" effect="NoiseVignetting">
		<texture type="diffuse" filename="data\textures\post_process\noise.png" />
		<texture type="diffuse" filename="data\textures\post_process\vignetting.png" />
		<parameter type="float" name="noisePct" value="0.2" />
		<parameter type="float" name="vignettingPct" value="0.2" />
		<parameter type="float" name="noiseAmount" value="0.2" />
	</material>

	<material name="FogMaterial" effect="Fog" vertex_type="Fog">
		<parameter type="color" name="diffuse_color" value="0.7 0.7 0.7 1.0" />
		<parameter type="float2" name="fog_start_end" value="35.0 100.0" />
	</material>

	<material name="DrawQuadMaterial" vertex_type="Quad">
	</material>
	
	<material name="DeferredShadingMaterial" vertex_type="DeferredQuad">
		<parameter type="color" name="diffuse_color" value="1.0 1.0 1.0 1.0 " />
	</material>

	<material name="ZBlurMaterial" vertex_type="ZBlur">
		<parameter type="float" name="ZBlurActive" value="1.0" />
		<parameter type="float" name="ZBlurShowDepths" value="0.0" />
		<parameter type="float" name="ZBlurConstantBlur" value="0.3" />
		<parameter type="float" name="ZBlurFocalStart" value="0.1" />
		<parameter type="float" name="ZBlurFocalEnd" value="0.2" />
		<parameter type="float" name="ZBlurEnd" value="0.8" />
	</material>	
	
	<material name="BloomMaterial" vertex_type="Bloom">
		<parameter type="float" name="threshold" value="0.8" />
	</material>
	
	<material name="BloomCombineMaterial" vertex_type="BloomCombine" >
		<parameter type="float" name="bloomActive" value="1.0" />
		<parameter type="float" name="bloomIntensity" value="1.0" />
		<parameter type="float" name="originalIntensity" value="0.8" />
		<parameter type="float" name="bloomSaturation" value="0.8" />
		<parameter type="float" name="originalSaturation" value="0.6" />
	</material>

	<material name="StartGaussianMaterial" vertex_type="Quad">
		<parameter type="float" name="textureSize" value="512.0" />
		<parameter type="float" name="blurScale" value="6.0" />
	</material>

	
	<material name="GaussianMaterial" vertex_type="Gaussian">
		<parameter type="float" name="textureSize" value="512.0" />
		<parameter type="float" name="blurScale" value="6.0" />
	</material>

	
	<material name="ColorGradingMaterial" vertex_type="ColorGrading">
		<parameter type="float" name="enabled" value="1.0" />
		<parameter type="float" name="brownSepiaColorGrading" value="0.5" />
		<parameter type="float" name="greenSepiaColorGrading" value="0.5" />
		<parameter type="float" name="blueSepiaColorGrading" value="0.5" />
		<parameter type="float" name="monochromeColorGrading" value="0.5" />
		<parameter type="float" name="colorColorGrading" value="0.5" />
		<parameter type="float" name="contrastColorGrading" value="0.5" />
		<parameter type="float" name="brightnessColorGrading" value="0.5" />
	</material>
	
	<material name="ShadowMapMaterial" vertex_type="ShadowMap" />
	<material name="HdaoMaterial" vertex_type="Hdao" >
		<parameter type="float" name="HDAOActive" value="1.0" />
		<parameter type="float" name="HDAOShowNormals" value="1.0" />
		<parameter type="float" name="HDAOShowAO" value="0.0" />
		<parameter type="float" name="HDAOUseNormals" value="1.0" />
		<parameter type="float2" name="RTSize" value="128.0 128.0" />
		<parameter type="float" name="AcceptAngle" value="1.0" />
		<parameter type="float" name="HDAOIntensity" value="1.0" />
		<parameter type="float" name="NormalScale" value="1.0" />
		<parameter type="float" name="HDAORejectRadius" value="0.5" />
		<parameter type="float" name="HDAOAcceptRadius" value="0.5" />
	</material>

</materials>
 